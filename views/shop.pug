extends layouts/main-layout.pug 

block content 
    main
        if prods.length > 0
            .grid 
                each product in prods 
                    article.card.product-item 
                        header.card__header    
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2016/12/25/19/28/monogram-1930679__340.png", alt="A Book") 
                        div.card__content 
                            h2.product__price $19.99
                            p.product__distribution A very interesting book about so many even more intersting things 
                        .card__actions 
                            button.btn Add to cart 
        else 
            h1 No Products

